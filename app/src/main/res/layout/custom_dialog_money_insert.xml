<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext3"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_money_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="項目"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_money_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/et_money_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="備註"
        android:inputType="text"
        android:padding="2dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="金額"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_insert_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/edittext2"
            android:padding="2dp"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/bt_Money_red"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/red_background"
            android:padding="1dp"
            android:text="支出"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_Money_green"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/green_background"
            android:padding="1dp"
            android:text="收入"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_Money_1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="１"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="２"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="３"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_Money_4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="４"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="５"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_6"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="６"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_Money_7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="７"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_8"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="８"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_9"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="９"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_money_plus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_plus" />

        <Button
            android:id="@+id/bt_Money_0"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="０"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Money_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back4" />
    </LinearLayout>
</LinearLayout>